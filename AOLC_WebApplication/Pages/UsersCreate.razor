@page "/UsersCreate"
@using AOLC_WebApplication.Data
@inject AolcUserService aolcUserService
@inject NavigationManager NavigationManager

<h2>Add User</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="FirstName" class="control-label">FirstName</label>
                <input form="FirstName" class="form-control" @bind="@obj.FirstName" />
            </div>
            <div class="form-group">
                <label for="LastName" class="control-label">LastName</label>
                <input form="LastName" class="form-control" @bind="@obj.LastName" />
            </div>
            @*<div class="form-group">
            <label for="Gender" class="control-label"></label>
            <select @bind="@obj.Gender" class="form-control">
                <option value="">-Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>*@
            <div class="form-group">
                <label for="Designation" class="control-label">Designation</label>
                <input form="Designation" class="form-control" @bind="@obj.Designation" />
            </div>
            <div class="form-group">
                <label for="City" class="control-label">City</label>
                <input form="City" class="form-control" @bind="@obj.City" />
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateUser" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    AolcUser obj = new AolcUser();
    protected async void CreateUser()
    {
        await aolcUserService.CreateUserAsync(obj);
        NavigationManager.NavigateTo("AolcUsers");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("AolcUsers");
    }
}
