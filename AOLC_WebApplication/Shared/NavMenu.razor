@using AOLC_WebApplication.Data
@using Microsoft.AspNetCore.Identity

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">AOLC_WebApplication</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-dashboard" aria-hidden="true"></span> DASHBOARD
            </NavLink>
        </li>

        <AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="()=>expandSubMenu= !expandSubMenu">
                <span class="oi oi-person" aria-hidden="true"></span> SYSTEM USERS
            </NavLink>

            @if (expandSubMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link"  href="AolcUser">

                            @*@serv.chosenRole="Administrator"*@
                            <span class="oi oi-list" aria-hidden="true"></span> Admins

                        </NavLink>
                    </li>



                    <li class="nav-item px-3" >
                        <NavLink class="nav-link" href="Client">
                            @*@serv.chosenRole="Client"*@
                            <span class="oi oi-list" aria-hidden="true"></span> Clients
                        </NavLink>
                    </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="Stuff">
                            <span class="oi oi-list" aria-hidden="true"></span> Staff
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
        </AuthorizeView>


    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu; //add

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    //AolcUserService serv ;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
